#include <iostream>
using namespace std;

int main() {
    double a1, d;
    int n;

    cout << "Введите первый член прогрессии (a1): ";
    cin >> a1;
    cout << "Введите разность прогрессии (d): ";
    cin >> d;
    cout << "Введите число членов прогрессии (n): ";
    cin >> n;

    // Формула суммы арифметической прогрессии:
    // S = n/2 * (2*a1 + (n - 1)*d)

    double S = n * 0.5 * (2 * a1 + (n - 1) * d);

    cout << "Сумма арифметической прогрессии: " << S << endl;

    return 0;
}
